import 'package:flutter/material.dart';

void main() => runApp(const MaterialApp(home: HomeScreen(), debugShowCheckedModeBanner: false));

class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});
  void showMsg(BuildContext c, String t) => ScaffoldMessenger.of(c).showSnackBar(SnackBar(content: Text("$t Clicked")));
  @override
  Widget build(BuildContext context) => Scaffold(
    appBar: AppBar(title: const Text("Simple UI")),
    body: Center(
      child: Column(mainAxisAlignment: MainAxisAlignment.center, children: [
        for (var b in [
          {"t": "Login", "i": Icons.login},
          {"t": "Sign Up", "i": Icons.person_add},
          {"t": "Settings", "i": Icons.settings},
        ])
          Padding(
            padding: const EdgeInsets.all(8),
            child: ElevatedButton.icon(
              onPressed: () => showMsg(context, b["t"]!),
              icon: Icon(b["i"] as IconData),
              label: Text(b["t"]!),
            ),
          )
      ]),
    ),
  );
}
